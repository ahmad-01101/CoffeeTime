<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="./css/site.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
    <title>@ViewBag.Title</title>
</head>
<style>
    /* Chrome, Safari, Edge, Opera */
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    /* Firefox */
    input[type=number] {
        -moz-appearance: textfield;
    }
    * {
        font-family: Arial, sans-serif;
    }
    /* mobile navbar section */
    .nav-style {
        background-color: rgba(81, 42, 16, .93);
        border-radius: 40px;
    }

    .Logo {
        font-weight: 700;
        font-size: 1.6rem;
        letter-spacing: .2px;
        color: #fff;
        text-decoration: none;
    }

        .Logo:hover {
            color: #fff;
        }

    .link-style {
        font-weight: 500;
        font-size: 1.2rem;
        color: #fff;
        text-decoration: none;
    }

        .link-style:hover {
            color: rgb(164, 164, 164);
        }
    /* admin layout start */

    /* side navbar */
    .sidebar {
        border-radius: 0px 40px 40px 0px;
        background-color: #713D1B;
    }

    .row-hight {
        height: 100vh;
    }

    .Login-Logo {
        font-weight: 700;
        font-size: 1.5rem;
        letter-spacing: .2px;
        color: #fff;
        text-decoration: none;
    }

        .Login-Logo:hover {
            color: #fff;
        }

    .side-link {
        border-bottom: .1px rgba(255, 255, 255, 0.226) solid;
    }

        .side-link a {
            text-decoration: none;
            color: #fff;
            font-size: 1.4rem;
        }

        .side-link:hover {
            text-decoration: none;
            color: #a2a2a2;
            border-radius: 5px;
            background-color: #af4600;
        }

    .offSetbutton {
        background-color: #713D1B;
        border: 1px rgba(255, 255, 255, 0.419) solid;
        border-radius: 3px;
    }

        .offSetbutton i {
            color: #fff;
        }

    .logout-button {
        position: absolute;
        bottom: 0px;
        left: 0px;
    }
    /* left side content */
    .AddItem-btn {
        background-color: #713D1B;
        color: #fff;
    }

        .AddItem-btn:hover {
            background-color: #512A10;
            color: #fff;
        }

    .AddItem-label {
        color: #000;
    }

    .AddItem-input {
        background-color: #E2D9D2;
        border: 1px black solid;
    }
</style>
<body style="background-color: #E2D9D2;">
    <div class="container-fluid">
        <!-- navbar top for small screen -->
        <nav class="navbar d-md-none nav-style sticky-top mb-3">
            <div class="container-fluid">
                <a href="#" class="Logo pt-1">
                    <img src="~/img/logo.png" class="pb-3" alt="logo">
                    Coffee Time
                </a>
                <button class="navbar-toggler border" type="button" data-bs-toggle="offcanvas"
                        data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
                    <i class="fas fa-bars" style="color: #ffffff;"></i>
                </button>
                <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar"
                     aria-labelledby="offcanvasNavbarLabel">
                    <div class="offcanvas-header" style="background-color: #512a10ed;">
                        <a href="#" class="Logo pt-1">
                            <img src="~/img/Adminlogo.png" class="pb-3" alt="logo">
                            Coffee Time
                        </a>
                        <button type="button" class="offSetbutton" style="background-color: #512a10ed;"
                                data-bs-dismiss="offcanvas" aria-label="Close">
                            <i class="fas fa-close"></i>
                        </button>
                    </div>
                    <div class="offcanvas-body" style="background-color: #512a10ed;">
                        <ul class="nav-list navbar-nav mx-auto text-center" style="color: #fff;">
                            <li class="nav-list mb-3">
                                <a asp-controller="Admin" asp-action="CustomerOrders" class="link-style">Orders</a>
                            </li>
                            <li class="nav-list mb-3">
                                <a asp-controller="Roles" asp-action="listroles" class="link-style">Authorization</a>
                            </li>
                            <li class="nav-list mb-3">
                                <a asp-controller="Admin" asp-action="MenuList" class="link-style">Menu</a>
                            </li>
@*                             <li class="nav-list mb-3">
                                <a href="#" class="link-style pe-xl-5">Account</a>
                            </li> *@
                            <li class="nav-list mb-3">
                                <a asp-controller="Account" asp-action="Logout" class="btn btn-danger btn-sm border border-4 border-danger px-3">
                                    Logout
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
        <div class="row">
            <div class="col-4 col-lg-3 col-xl-2 text-start sidebar d-none d-md-block h-100 position-fixed pt-4">
                <a href="#" class="Login-Logo">
                    <img src="~/img/Adminlogo.png" class="pb-3" alt="logo">
                    Coffee Time
                </a>
                <h5 class="text-start text-light ps-1 pb-4">Welcome Ahmad</h5>
                <ul class="nav-list mt-4 navbar-nav text-center">
                    <li class="mb-4 side-link  py-2">
                        <a asp-controller="Admin" asp-action="CustomerOrders" class="">Orders</a>
                    </li>
                    <li class="mb-4 side-link  py-2">
                        <a asp-controller="Roles" asp-action="listroles" class="">Authorization</a>
                    </li>
                    <li class="mb-4 side-link  py-2">
                        <a asp-controller="Admin" asp-action="MenuList" class="">Menu</a>
                    </li>
@*                     <li class="mb-4 side-link py-2">
                        <a href="#" class="">Account</a>
                    </li> *@

                    <li class="mb-4 py-2">
                        <a asp-controller="Account" asp-action="Logout" class="btn btn-danger btn-lg border border-4 border-danger mt-3 px-4">Logout</a>
                    </li>
                </ul>
            </div>      
            <div class="col-md-4 col-lg-3 col-xl-2"></div>

            @RenderBody()
        </div>
    </div>
</body>
</html>
