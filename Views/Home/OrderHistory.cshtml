@model List<CoffeeTime.Models.Domain.Order>
@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_UserLayout2.cshtml";
}
<div class="container">
    @if (Model.Count == 0)
    {
        <div class="row mx-1 mx-md-5 justify-content-center mt-5 py-5 CartBody shadow">
            <div class="col-12 col-md-8 ">
                <div class="row">
                    <div class="col-12 text-center pt-4 pb-3">
                        <i class="fas fa-regular fa-exclamation-circle " style="color: #d1d100; font-size: 3.2rem;"></i>
                    </div>
                    <div class="col-12 text-center">
                        <h3><strong>You didn't make any orders yet</strong></h3>
                        <a asp-action="Home" class="StoreLink"><strong><i class="fas fa-arrow-left pe-1"></i>Back To Store</strong></a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row p-1 p-md-4">
            <div class="col mb-2 Orders-Container">
                <h5 class="d-flex justify-content-between align-items-center mt-3 mt-md-0 mb-3">
                    <span class="">Order History</span>
                    <div class="d-grid mt-1">
                        <a asp-action="Home" class="StoreLink" style="font-size: medium;"><strong><i class="fas fa-arrow-left pe-1"></i>Back To Store</strong></a>
                    </div>
                </h5>
                <ul class="list-group mb-3">
                    @foreach (var item in Model)
                    {
                    <li class="d-flex justify-content-between mb-3 p-3 shadow" style="background-color: rgb(245, 245, 245); border-radius: 20px;">
                        <div>
                            <h6 class="my-0">Number @item.Id</h6>
                            <small class="text-muted">Status: @item.OrderStatus</small>
                        </div>
                        <span class="text-muted">
                            <a asp-route="Invoice" asp-route-id="@item.OrderId" class="btn btn-outline-secondary btn-sm" style="border-radius: 10px;">
                                <strong>Invoice</strong>
                            </a>
                        </span>
                    </li>
                    }
                </ul>
            </div>
        </div>
    }
</div>