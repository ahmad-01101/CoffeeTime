<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="x-icon" href="../img/logo.png">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="./css/site.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <title>@ViewBag.Title</title>
</head>
<body class="d-flex flex-column min-vh-100">
<style>
    * {
        font-family: Arial, sans-serif;
    }
    /* navbar section */
    .nav-style {
        background-color: rgba(81, 42, 16, .93);
        border-radius: 40px;
    }

    .Logo {
        font-weight: 400;
        font-size: 1.6rem;
        letter-spacing: .2px;
        color: #fff;
        text-decoration: none;
    }

    .Logo:hover {
        color: #fff;
    }

    .link-style {
        font-weight: 100;
        font-size: 1.2rem;
        color: #fff;
        text-decoration: none;
    }

    .link-style:hover {
        color: #af4600;
    }

    .account-btn {
        border: none;
        background-color: transparent;
    }

    .nav-icons {
        color: #fff;
    }

    .nav-icons:hover {
        color: #af4600;
    }

        .offSetbutton {
            background-color: #713D1B;
            border: 1px rgba(255, 255, 255, 0.419) solid;
            border-radius: 3px;
        }

            .offSetbutton i {
                color: #fff;
            }

</style>
<div class="container mb-5">
    <!-- NavBar section -->
    <nav class="navbar navbar-expand-lg navbar-dark nav-style px-3 fixed-top mx-1">
        <!-- large screen navbar -->
        <div class="col-lg-3">
            <a href="#" class="Logo pt-1">
                <img src="../img/logo.png" class="pb-3" alt="logo">
                Coffee Time
            </a>
        </div>
        <div class="col-lg-6">
            <div class="collapse navbar-collapse" id="navmenu">
                <ul class="d-flex align-items-center nav-list navbar-nav mx-auto text-center" style="color: #fff;">
                    <li class="nav-list ps-lg-5">
                        <a href="#" class="link-style">Home</a>
                    </li>
                    <li class="nav-list ps-lg-5">
                        <a href="#WhyUs" class="link-style">Why Us</a>
                    </li>
                    <li class="nav-list ps-lg-5">
                        <a href="#Menu" class="link-style">Menu</a>
                    </li>
                    <li class="nav-list ps-lg-5 pe-xl-5">
                        <a href="#Contact" class="link-style pe-xl-5">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-lg-4 d-none d-lg-block d-flex justify-content-lg-end">
                <partial name="_LoginInfo"></partial>
        </div>
        <!-- mobile navbar -->
        <button class="navbar-toggler border" type="button" data-bs-toggle="offcanvas"
                data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
            <i class="fas fa-bars" style="color: #ffffff;"></i>
        </button>
        <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar"
                aria-labelledby="offcanvasNavbarLabel">
            <div class="offcanvas-header" style="background-color: #512a10ed;">
                <a href="#" class="Logo pt-1">
                    <img src="../img/Adminlogo.png" class="pb-3" alt="logo">
                    Coffee Time
                </a>
                <button type="button" class="offSetbutton" style="background-color: #512a10ed;"
                        data-bs-dismiss="offcanvas" aria-label="Close">
                    <i class="fas fa-close"></i>
                </button>
            </div>
            <div class="offcanvas-body" style="background-color: #512a10ed;">
                <ul class="nav-list navbar-nav mx-auto text-center" style="color: #fff;">
                    <partial name="_MobileLoginInfo"></partial>
                </ul>
            </div>
        </div>
    </nav>
</div>
        @RenderBody()
<div id="Contact" class="row mt-4"></div>
<footer class="text-white text-center text-lg-start mt-auto" style="background-color: #713d1b;">
    <div class="container p-3">
        <div class="row mt-4 justify-content-center">
            <div class="col-lg-4 col-md-6 mb-4 mb-md-0">
                <h2 class="mb-4 pb-1">Contact</h2>
                <ul class="fa-ul" style="margin-left: 1.65em;">
                    <li class="mb-4">
                        <span class="fa-li"><i class="fas fa-home"></i></span><span class="ms-0 ms-lg-2">Riyadh, Rd 10012, SA</span>
                    </li>
                    <li class="mb-4">
                        <span class="fa-li"><i class="fas fa-envelope"></i></span><span class="ms-0 ms-lg-2">CoffeeTime@gmail.com</span>
                    </li>
                    <li class="mb-3">
                        <span class="fa-li"><i class="fas fa-phone"></i></span><span class="ms-0 ms-lg-2">050-666-7777</span>
                    </li>
                </ul>
            </div>
            <div class="col-lg-4 col-md-6 mb-4 mb-md-0">
                <h2 class="mb-4">Opening hours</h2>
                <table class="table text-center text-white">
                    <tbody class="font-weight-normal">
                        <tr>
                            <td>Mon - Thu:</td>
                            <td>8am - 9pm</td>
                        </tr>
                        <tr>
                            <td>Fri - Sat:</td>
                            <td>8am - 1am</td>
                        </tr>
                        <tr>
                            <td>Sunday:</td>
                            <td>9am - 10pm</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-12 text-center">
                <a href="#" class="Logo">
                    <img src="../img/logo.png" class="pb-3" alt="logo">
                    Coffee Time
                </a>
            </div>
        </div>
    </div>
    <!-- Copyright -->
    <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
        © 2023 Copyright:
        <a class="text-white" href="https://ahmadshenqiti.com/">ahmadshenqiti.com</a>
    </div>
</footer>
</body>
</html>
