@model List<CoffeeTime.Models.Domain.MenuList>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="x-icon" href="./img/logo.png">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <link rel="stylesheet" href="./css/site.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.js" integrity="sha512-f04GBpoqEZhbyjlRTuXeg8FIHDb+xfCJ0LVdqiN1fEl5B3jz3Z0SPe9IxDumOVdTeeXmKMcMJhb26VuGf1Laqw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>@ViewBag.Title</title>
</head>
<body>
    <style>
        * {
            font-family: Arial, sans-serif;
        }
        /* navbar section */
        .nav-style {
            background-color: rgba(81, 42, 16, .93);
            border-radius: 40px;
        }

        .Logo {
            font-weight: 400;
            font-size: 1.6rem;
            letter-spacing: .2px;
            color: #fff;
            text-decoration: none;
        }

            .Logo:hover {
                color: #fff;
            }

        .link-style {
            font-weight: 100;
            font-size: 1.2rem;
            color: #fff;
            text-decoration: none;
        }

            .link-style:hover {
                color: #af4600;
            }

        .account-btn {
            border: none;
            background-color: transparent;
        }

        .nav-icons {
            color: #fff;
        }

            .nav-icons:hover {
                color: #af4600;
            }
        /* show case section */
        .masthead {
            background-image: url('../img/background.png');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            position: relative;
            height: 100vh;
            color: rgba(255, 255, 255, 555.9);
        }

        @@media (max-width: 768px) {
            .masthead {
                min-height: 80vh;
            }
        }

        .showCaseText {
            font-size: 3rem;
            position: absolute;
            width: 100%;
            height: 100%;
        }

        @@media (min-width:1024px) {
            .showCaseText {
                font-size: 4rem;
                font-weight: 600;
                width: 26rem;
            }
        }
        /* about section */
        .AboutBackground {
            background-image: url('../img/AboutBackground.png');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
        }

        .sectionsHeader {
            font-weight: 600;
        }

        .headerSpan {
            color: #713d1b;
        }

        .aboutImg {
            border-radius: 60px;
        }

        .aboutImg2 {
            margin-top: 60px;
        }

        @@media (min-width:960px) {
            .aboutImg {
                border-radius: 90px;
            }

            .aboutImg2 {
                border-radius: 100px;
            }
        }

        @@media (min-width:576px) {
            .aboutImg {
                border-radius: 90px;
            }

            .aboutImg2 {
                border-radius: 100px;
            }
        }

        .aboutImg-right {
            border-radius: 30px;
            background-color: rgb(252, 239, 230);
        }

            .aboutImg-right:hover {
                background-color: rgb(254, 232, 217);
            }

        .AboutText {
            color: #000;
            font-weight: 500;
        }
        /* menu section */
        .MenuBackground {
            background-image: url('../img/MenuBackground1.png');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
        }

        .menu-card {
            border-radius: 20px;
            transition: all 0.3s;
            background-color: rgb(252, 239, 230);
        }

            .menu-card:hover {
                transform: scale(1.03);
            }

        .card-button:hover {
            color: #cb9d79;
        }

        .offSetbutton {
            background-color: #713D1B;
            border: 1px rgba(255, 255, 255, 0.419) solid;
            border-radius: 3px;
        }

            .offSetbutton i {
                color: #fff;
            }

        .toast {
            bottom: 15px;
            right: 15px;
            z-index: 9999;
        }
    </style>


    @if (ViewBag.isSuccess == true)
    {
        <div class="toast position-fixed bottom-0 end-0 m-2" data-bs-autohide="false" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <i class="fas fa-check-circle fa-lg text-success pe-1"></i>
                <strong class="me-auto">new item added</strong>
                <small></small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="close"></button>
            </div>
            <div asp-action="viewcart" class="toast-body py-2">
                <a asp-action="viewcart">go to your cart</a>
            </div>
        </div>
    }

    <div class="masthead">
        <!-- NavBar section -->
        <nav class="navbar navbar-expand-lg navbar-dark nav-style px-3 fixed-top mx-1">
            <!-- large screen navbar -->
            <div class="col-lg-3">
                <a href="#" class="Logo pt-1">
                    <img src="../img/logo.png" class="pb-3" alt="logo">
                    Coffee Time
                </a>
            </div>
            <div class="col-lg-6">
                <div class="collapse navbar-collapse" id="navmenu">
                    <ul class="d-flex align-items-center nav-list navbar-nav mx-auto text-center" style="color: #fff;">
                        <li class="nav-list ps-lg-5">
                            <a href="#" class="link-style">Home</a>
                        </li>
                        <li class="nav-list ps-lg-5">
                            <a href="#WhyUs" class="link-style">Why Us</a>
                        </li>
                        <li class="nav-list ps-lg-5">
                            <a href="#Menu" class="link-style">Menu</a>
                        </li>
                        <li class="nav-list ps-lg-5 pe-xl-5">
                            <a href="#Contact" class="link-style pe-xl-5">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-4 d-none d-lg-block d-flex justify-content-xl-center">
                <partial name="_LoginInfo"></partial>
            </div>
            <!-- mobile navbar -->
            <button class="navbar-toggler border" type="button" data-bs-toggle="offcanvas"
                    data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
                <i class="fas fa-bars" style="color: #ffffff;"></i>
            </button>
            <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar"
                 aria-labelledby="offcanvasNavbarLabel">
                <div class="offcanvas-header" style="background-color: #512a10ed;">
                    <a href="#" class="Logo pt-1">
                        <img src="../img/Adminlogo.png" class="pb-3" alt="logo">
                        Coffee Time
                    </a>
                    <button type="button" class="offSetbutton offcanvasIcon"
                            data-bs-dismiss="offcanvas" aria-label="Close">
                        <i class="fas fa-close offcanvasIcon"></i>
                    </button>
                </div>
                <div class="offcanvas-body" style="background-color: #512a10ed;">
                    <ul class="nav-list navbar-nav mx-auto text-center" style="color: #fff;">
                        <partial name="_MobileLoginInfo"></partial>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="d-flex justify-content-center align-items-center align-items-lg-end text-center text-lg-start ps-3 pb-5 showCaseText">
            Life Is Good With Coffee
        </div>
    </div>
    <!-- About section -->
    <div id="WhyUs" class="container-fluid pt-5 AboutBackground">
        <div id="" class="row mt-5"></div>
        <div class="row justify-content-center">
            <div class="col text-center">
                <h1 class="mb-0 sectionsHeader">Why <span class="headerSpan">Us</span></h1>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="row">
                    <div class="col col-lg-4 col-xl-4 mt-md-5 p-0 text-end">
                        <img src="../img/aboutImg1.png" class="w-75 aboutImg" alt="">
                    </div>
                    <div class="col col-lg-4 col-xl-4 p-0 pt-5 mt-md-5 px-sm-2 px-lg-2 px-xl-3">
                        <img src="../img/aboutImg2.png" class="w-100 aboutImg aboutImg2" alt="">
                    </div>
                    <div class="col col-lg-4 col-xl-4 mt-md-5 p-0">
                        <img src="../img/aboutImg3.png" class="w-75 aboutImg" alt="">
                    </div>
                </div>
            </div>
            <div class="col-11 col-md-6 text-center mt-3 px-sm-5">
                <h4 class="mb-3 AboutText">What's Makes Our Coffee Special!</h4>
                <div class="row justify-content-center mb-4">
                    <div class="col col-md-5 col-xl-3 col-lg-4 p-2 me-3 aboutImg-right shadow">
                        <img src="../img/aboutImg4.png" alt="">
                        <h6>Excellent Flavor</h6>
                    </div>
                    <div class="col col-md-5 col-xl-3 col-lg-4 p-2 aboutImg-right shadow">
                        <img src="../img/aboutImg5.png" alt="">
                        <h6>Best Beans</h6>
                    </div>
                </div>
                <div class="row justify-content-center mb-4">
                    <div class="col col-md-5 col-xl-3 col-lg-4 p-2 me-3 aboutImg-right shadow">
                        <img src="../img/aboutImg6.png" alt="">
                        <h6>Best Quality</h6>
                    </div>
                    <div class="col col-md-5 col-xl-3 col-lg-4 p-2 aboutImg-right shadow">
                        <img src="../img/aboutImg7.png" alt="">
                        <h6>Quick Making</h6>
                    </div>
                </div>
                <div class="row justify-content-center mb-4">
                    <div class="col col-md-5 col-xl-3 col-lg-4 p-2 me-3 aboutImg-right shadow">
                        <img src="../img/aboutImg8.png" alt="">
                        <h6>Best Place</h6>
                    </div>
                    <div class="col col-md-5 col-xl-3 col-lg-4 p-2 aboutImg-right shadow">
                        <img src="../img/aboutImg9.png" alt="">
                        <h6>Free Wifi</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- menu section -->
    <div class="container-fluid MenuBackground">
        <div id="Menu" class="row pb-2"></div>
        <div class="row justify-content-center mt-5 pt-5 mb-4">
            <div class="col text-center">
                <h1 class="mb-0 sectionsHeader">Our <span class="headerSpan">Menu</span></h1>
            </div>
        </div>
        <div class="row justify-content-center pb-5">
            @*<partial name="_menuList"></partial>*@
            @foreach (var item in Model)
            {
                <div class="col-10 col-md-4 menu-card my-2 p-2 shadow mx-2">
                    <div class="row p-lg-1">
                        <div class="col-12 d-inline-flex justify-content-between align-items-center">
                            <h3>@item.ItemName</h3>
                            <h3>
                                <a asp-route="AddItem" asp-route-id="@item.Id" class="link-dark card-button h5 text-decoration-none"><i class="fas fa-plus"></i> Add</a>
                            </h3>
                        </div>
                        <div class="col-12">
                            @item.ItemPrice SAR
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div id="Contact" class="row"></div>
    <footer class="text-white text-center text-lg-start" style="background-color: #713d1b;">
        <div class="container p-3">
            <div class="row mt-4 justify-content-center">
                <div class="col-lg-4 col-md-6 mb-4 mb-md-0">
                    <h2 class="mb-4 pb-1">Contact</h2>
                    <ul class="fa-ul" style="margin-left: 1.65em;">
                        <li class="mb-4">
                            <span class="fa-li"><i class="fas fa-home"></i></span><span class="ms-0 ms-lg-2">Riyadh, Rd 10012, SA</span>
                        </li>
                        <li class="mb-4">
                            <span class="fa-li"><i class="fas fa-envelope"></i></span><span class="ms-0 ms-lg-2">CoffeeTime@gmail.com</span>
                        </li>
                        <li class="mb-3">
                            <span class="fa-li"><i class="fas fa-phone"></i></span><span class="ms-0 ms-lg-2">050-666-7777</span>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-4 col-md-6 mb-4 mb-md-0">
                    <h2 class="mb-4">Opening hours</h2>
                    <table class="table text-center text-white">
                        <tbody class="font-weight-normal">
                            <tr>
                                <td>Mon - Thu:</td>
                                <td>8am - 9pm</td>
                            </tr>
                            <tr>
                                <td>Fri - Sat:</td>
                                <td>8am - 1am</td>
                            </tr>
                            <tr>
                                <td>Sunday:</td>
                                <td>9am - 10pm</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-12 text-center">
                    <a href="#" class="Logo">
                        <img src="./img/logo.png" class="pb-3" alt="logo">
                        Coffee Time
                    </a>
                </div>
            </div>
        </div>
        <!-- Copyright -->
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            © 2023 Copyright:
            <a class="text-white" href="https://ahmadshenqiti.com/">ahmadshenqiti.com</a>
        </div>
    </footer>
    <script>
        const myToast = new bootstrap.Toast('.toast');
        myToast.show();
    </script>

</body>
</html>