@if (ViewBag.isSuccess == true)
{
    <div class="toast position-fixed bottom-0 end-0 m-2 z-index-3" style="z-index: 9999;" data-bs-autohide="false" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <i class="fas fa-check-circle fa-lg text-success pe-1"></i>
            <strong class="me-auto">changes saved successfully</strong>
            <small></small>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="close"></button>
        </div>
    </div>
}

<script>
    const myToast = new bootstrap.Toast('.toast');
    myToast.show();
</script>