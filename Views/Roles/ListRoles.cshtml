@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signInManager
@{

    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="col">
    <div class="row p-md-4 pt-3 shadow m-md-4">
        <div class="col-12 d-inline-flex mb-3">
            <h1 class="header me-4 me-md-5 mt-1">Roles List</h1>
        </div>
        <div class="col">
            @if (Model.Any())
            {
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var role in Model){
                    <tr>
                        <th scope="row">@role.Name</th>
                        <td>
                            <a asp-controller="Roles" asp-action="EditRoles" asp-route-id="@role.Id" class="btn btn-sm btn-secondary">add or delete user</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            }
            else
            {
                <div class="card">
                    <div class="card-header">
                        no data
                    </div>
                </div>
            }
        </div>
    </div>
</div>